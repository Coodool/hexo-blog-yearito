// Custom styles.

//表格第一列不换行
table tbody tr td:first-child {
  white-space: nowrap;
}

//修正note标签里的代码片段颜色
.note code {
  mix-blend-mode: multiply
}

//隐藏首页的题图
section.posts-expand .post-body .fancybox {
  display: none;
}

//两端对齐
.post-body p {
  text-align: justify;
}

//调整叠加层级
.fancybox-container {
  z-index: 9999999999;
}

#live2dcanvas {
  z-index: 100 !important;
}

//统一题图宽高样式
//.page-home article img {
